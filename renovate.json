{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ]
  },
  "argocd": {
    "fileMatch": [
      "^gitops/.+\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "/^\\d+\\.\\d+\\.\\d+$/",
      "rangeStrategy": "replace"
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "latest",
      "pinDigests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true,
  "digest": {
    "enabled": true
  },
  "registryAliases": {
    "reg.ygnv.my.id/docker": "docker.io",
    "reg.ygnv.my.id/ghcr": "ghcr.io",
    "reg.ygnv.my.id/quay": "quay.io"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "https://github\\.com/cert-manager/cert-manager/releases/download/(?<currentValue>v[0-9.]+)/cert-manager\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cert-manager/cert-manager"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/traefik/traefik/(?:refs/tags/)?(?<currentValue>v[0-9.]+)/docs/content/reference/dynamic-configuration/kubernetes-crd-(?:definition-v1|rbac)\\.yml"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "traefik/traefik"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/metallb/metallb/(?<currentValue>v[0-9.]+)/config/manifests/metallb-native\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "metallb/metallb"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/argoproj/argo-cd/(?<currentValue>v[0-9.]+|master)/manifests/install\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj/argo-cd"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/aquasecurity/trivy-operator/(?<currentValue>v[0-9.]+)/deploy/static/trivy-operator\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aquasecurity/trivy-operator"
    }
  ]
}