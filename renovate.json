{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)(docker-compose|dockerfile)[^/]*$"
      ],
      "matchStrings": [
        "docker-image=(?<depName>lscr\\.io/linuxserver/(overseerr|transmission|tautulli)):(?<currentValue>version-(?<currentVersion>v?\\d+\\.\\d+\\.\\d+(-[\\d\\w-]+)*))\\b"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "/^\\d+\\.\\d+\\.\\d+$/",
      "rangeStrategy": "replace"
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "latest",
      "pinDigests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true,
  "digest": {
    "enabled": true
  }
}
