{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "/^\\d+\\.\\d+\\.\\d+$/",
      "rangeStrategy": "replace"
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "latest",
      "pinDigests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true,
  "digest": {
    "enabled": true
  },
  "registryAliases": {
    "reg.ygnv.my.id/docker": "docker.io",
    "reg.ygnv.my.id/ghcr": "ghcr.io",
    "reg.ygnv.my.id/quay": "quay.io"
  },
  "regexManagers": [
    {
      "fileMatch": [
        "kustomization\\.ya?ml$"
      ],
      "matchStrings": [
        "https://github\\.com/cert-manager/cert-manager/releases/download/(?<currentValue>v[0-9.]+)/cert-manager\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cert-manager/cert-manager"
    },
    {
      "fileMatch": [
        "kustomization\\.ya?ml$"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/traefik/traefik/(?<currentValue>v[0-9.]+)/docs/content/reference/dynamic-configuration/kubernetes-crd-definition-v1\\.yml"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "traefik/traefik"
    },
    {
      "fileMatch": [
        "kustomization\\.ya?ml$"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/metallb/metallb/(?<currentValue>v[0-9.]+)/config/manifests/metallb-native\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "metallb/metallb"
    },
    {
      "fileMatch": [
        "kustomization\\.ya?ml$"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/argoproj/argo-cd/(?<currentValue>v[0-9.]+|master)/manifests/install\\.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj/argo-cd"
    }
  ]
}