{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/",
      "/\\.yml$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "enabled": true
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "/^\\d+\\.\\d+\\.\\d+$/",
      "rangeStrategy": "replace"
    },
    {
      "matchPackageNames": [
        "*"
      ],
      "matchManagers": [
        "kubernetes"
      ],
      "matchCurrentVersion": "latest",
      "pinDigests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true,
  "digest": {
    "enabled": true
  }
}
